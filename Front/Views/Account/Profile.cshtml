@{
    Layout = null; // Layout kullanmayacağız
}

<!DOCTYPE html>
<html>
<head>
    <title>Hesap</title>
    <meta name="viewport" content="width=device-width, initial-scale=1"> <!-- Duyarlılık için meta etiketi -->
    <!-- CSS dosyalarını ekleyebiliriz -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Ek CSS dosyaları burada eklenebilir -->
</head>
<body>
    <div class="container">
        <h1>Kullanıcı Hesabı</h1>
        <!-- Kullanıcı bilgileri formu -->
        <form>
            <!-- Kullanıcı adı, email, vb. bilgiler -->
            <div class="form-group">
                <label for="username">Kullanıcı Adı</label>
                <input type="text" class="form-control" id="username" placeholder="Kullanıcı Adınızı Giriniz">
            </div>
            <div class="form-group">
                <label for="email">E-posta Adresi</label>
                <input type="email" class="form-control" id="email" placeholder="E-posta Adresinizi Giriniz">
            </div>
            <!-- Diğer kullanıcı bilgileri alanları burada olabilir -->

            <!-- Şifre değiştirme -->
            <hr>
            <h3>Şifre Değiştirme</h3>
            <div class="form-group">
                <label for="currentPassword">Mevcut Şifre</label>
                <input type="password" class="form-control" id="currentPassword" placeholder="Mevcut Şifrenizi Giriniz">
            </div>
            <div class="form-group">
                <label for="newPassword">Yeni Şifre</label>
                <input type="password" class="form-control" id="newPassword" placeholder="Yeni Şifrenizi Giriniz">
            </div>
            <!-- Şifre değiştirme butonu -->
            <button type="submit" class="btn btn-primary">Şifreyi Değiştir</button>
        </form>
    </div>

    <!-- JavaScript dosyalarını ekleyebiliriz -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Ek JS dosyaları burada eklenebilir -->

    <div class="text-center mt-4">
        <a href="~/Home/Index" class="btn btn-secondary">Ana Sayfaya dön</a>
    </div>
    
</body>
</html>
