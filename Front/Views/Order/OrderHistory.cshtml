@{
    Layout = null; // Layout kullanmayacağız
}

<!DOCTYPE html>
<html>
<head>
    <title>Sipariş Geçmişi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1"> <!-- Duyarlılık için meta etiketi -->
    <!-- CSS dosyalarını ekleyebiliriz -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Ek CSS dosyaları burada eklenebilir -->
</head>
<body>
    <div class="container">
        <h1>Sipariş Geçmişi</h1>
        <!-- Örnek sipariş listesi -->
        <div class="row">
            <div class="col-md-6">
                <h3>Sipariş #12345</h3>
                <p>Tarih: 01.01.2023</p>
                <!-- Sipariş detayları -->
                <ul>
                    <li>Ürün 1 - Miktar: 2</li>
                    <li>Ürün 2 - Miktar: 1</li>
                    <!-- Diğer ürünler burada listelenebilir -->
                </ul>
            </div>
            <!-- Diğer siparişler burada listelenebilir -->
        </div>
    </div>

    <!-- JavaScript dosyalarını ekleyebiliriz -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Ek JS dosyaları burada eklenebilir -->

    <div class="text-center mt-4">
        <a href="~/Home/Index" class="btn btn-secondary">Ana Sayfaya dön</a>
    </div>
    
</body>
</html>
