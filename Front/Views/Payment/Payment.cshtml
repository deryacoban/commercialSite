@{
    Layout = null; // Layout kullanmayacağız
}

<!DOCTYPE html>
<html>
<head>
    <title>Ödeme</title>
    <meta name="viewport" content="width=device-width, initial-scale=1"> <!-- Duyarlılık için meta etiketi -->
    <!-- CSS dosyalarını ekleyebiliriz -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Ek CSS dosyaları burada eklenebilir -->
</head>
<body>
    <div class="container">
        <h1>Ödeme Yap</h1>
        <!-- Ödeme bilgileri formu -->
        <form>
            <!-- Kargo adresi bilgileri -->
            <div class="form-group">
                <label for="shippingAddress">Kargo Adresi</label>
                <input type="text" class="form-control" id="shippingAddress" placeholder="Kargo Adresi Giriniz">
            </div>

            <!-- Ödeme seçenekleri -->
            <div class="form-group">
                <label for="paymentMethod">Ödeme Yöntemi</label>
                <select class="form-control" id="paymentMethod">
                    <option>Kredi Kartı</option>
                    <option>Banka Transferi</option>
                    <option>PayPal</option>
                </select>
            </div>

            <!-- Ödeme bilgileri -->
            <div class="form-group">
                <label for="cardNumber">Kredi Kartı Numarası</label>
                <input type="text" class="form-control" id="cardNumber" placeholder="Kredi Kartı Numaranızı Giriniz">
            </div>
            <!-- Diğer ödeme bilgileri alanları burada olabilir -->

            <!-- Ödeme butonu -->
            <button type="submit" class="btn btn-primary">Ödemeyi Tamamla</button>
        </form>
    </div>

    <!-- JavaScript dosyalarını ekleyebiliriz -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Ek JS dosyaları burada eklenebilir -->

    <div class="text-center mt-4">
        <a href="~/Home/Index" class="btn btn-secondary">Ana Sayfaya dön</a>
    </div>
    
</body>
</html>
